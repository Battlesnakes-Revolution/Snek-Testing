run = "cd && npm install && npm run build && npm start"
entrypoint = "README.md"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_11"
packages = ["cowsay"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run"
mode = "sequential"
author = 6931656

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx start -p 3000"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and Serve"

[[workflows.workflow]]
name = "Build and Serve"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build && npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "start"]
